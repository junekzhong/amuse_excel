<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!--日志打印格式-->
    <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} -%msg%n"/>
    <!--<property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%n"/>-->
    <!--<property name="PATTERN" value="%msg%n"/>-->
    <!--开发环境的日志等级，通过spring.profiles.active属性来决定启用哪个日志等级-->
    <springProfile name="dev">
        <!--日志存储地址-->
        <property name="LOG_HOME" value="/Users/zhongjunkai/steller/logs"/>
        <!--<property name="LOG_HOME" value="/root/absorb/logs"/>-->
        <logger name="com.zys" level="info"/>
        <logger name="org.springframework" level="info"/>
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>${PATTERN}</pattern>
            </encoder>
        </appender>
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <FileNamePattern>${LOG_HOME}/ia.log.%d{yyyy-MM-dd}.log</FileNamePattern>
                <MaxHistory>30</MaxHistory>
            </rollingPolicy>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>${PATTERN}</pattern>
            </encoder>
        </appender>
    </springProfile>
    <!--生产环境的日志等级，通过spring.profiles.active属性来决定启用哪个日志等级-->
    <springProfile name="pro">
        <!--日志存储地址-->
        <!--<property name="LOG_HOME" value="/root/steller/logs"/>-->
        <property name="LOG_HOME" value="/Users/zhongjunkai/steller/logs"/>
        <logger name="com.yscredit" level="info"/>
        <logger name="org.springframework" level="error"/>
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>${PATTERN}</pattern>
            </encoder>
        </appender>
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <FileNamePattern>${LOG_HOME}/ia.log.%d{yyyy-MM-dd}.log</FileNamePattern>
                <MaxHistory>30</MaxHistory>
            </rollingPolicy>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>${PATTERN}</pattern>
            </encoder>
        </appender>
    </springProfile>
    <root level="info">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>